@using BussinessCupApi.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Admin Girişi";
    Layout = "_AuthLayout";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-[#3a0ca3] via-[#4361ee] to-[#7209b7] py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-[#2d1a4a] p-10 rounded-xl shadow-2xl border-t-4 border-[#7209b7]">
        <div>
            <img src="~/images/logo.png" alt="Euro Bussiness Cup" class="mx-auto h-16 mb-4 drop-shadow-lg" />
            <h2 class="mt-6 text-center text-3xl font-extrabold text-white tracking-wide">
                Euro Bussiness Cup Admin
            </h2>
            <p class="mt-2 text-center text-sm text-[#4361ee]">
                Yönetim paneline erişmek için giriş yapın
            </p>
        </div>
        
        <!-- Success ve Error mesajları için bölüm -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
                <span class="block sm:inline">@TempData["SuccessMessage"]</span>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                <span class="block sm:inline">@TempData["ErrorMessage"]</span>
            </div>
        }
        
        <form class="mt-8 space-y-6" method="post">
            <div asp-validation-summary="ModelOnly" class="text-[#4361ee] text-center text-sm mb-4"></div>
            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    <label for="Email" class="sr-only">Email</label>
                    <input asp-for="Email" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-[#7209b7] placeholder-gray-400 text-gray-900 rounded-t-md focus:outline-none focus:ring-[#3a0ca3] focus:border-[#3a0ca3] focus:z-10 sm:text-sm" placeholder="Email">
                </div>
                <div>
                    <label for="Password" class="sr-only">Şifre</label>
                    <input asp-for="Password" type="password" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-[#7209b7] placeholder-gray-400 text-gray-900 rounded-b-md focus:outline-none focus:ring-[#3a0ca3] focus:border-[#3a0ca3] focus:z-10 sm:text-sm" placeholder="Şifre">
                </div>
            </div>
            <div class="text-center">
                <a href="@Url.Action("ForgotPassword", "Account")"
                   class="text-[#4361ee] underline text-sm hover:text-[#3a0ca3]">
                    Şifremi Unuttum
                </a>
            </div>

            <div>
                <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-[#7209b7] hover:bg-[#3a0ca3] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#4361ee] transition-all duration-150">
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                        <i class="fas fa-sign-in-alt"></i>
                    </span>
                    Giriş Yap
                </button>
            </div>
        </form>
    </div>
</div> 