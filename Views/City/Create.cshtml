@model BussinessCupApi.ViewModels.CityViewModel
@{
    ViewData["Title"] = "Şehir Yönetimi";
    Layout = "_AdminLayout";
}

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    @* Yeni Şehir Ekleme Formu *@
    <div class="md:col-span-1 bg-gray-800 rounded-lg p-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>

            <div class="mb-4">
                <label asp-for="Name" class="block text-gray-300 mb-2">Şehir Adı</label>
                <input asp-for="Name" class="w-full bg-gray-700 text-white rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Name" class="text-red-500 text-sm mt-1"></span>
            </div>

            <div class="flex justify-end">
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                    Ekle
                </button>
            </div>
        </form>
    </div>

    @* Mevcut Şehirler Listesi *@
    <div class="md:col-span-2">
        @if (ViewBag.Cities != null && ((IEnumerable<BussinessCupApi.Models.City>)ViewBag.Cities).Any())
        {
            <div class="bg-gray-800 rounded-lg p-6 mt-6"> 
                <table id="sortable-table" class="min-w-full bg-gray-700 rounded-lg">
                    <thead>
                        <tr class="bg-gray-600 text-gray-300 uppercase text-sm leading-normal">
                            <th class="py-3 px-6 text-left">Şehir Adı</th>
                            <th class="py-3 px-6 text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody id="table-body" class="text-gray-200 text-sm font-light">
                        @foreach (var item in ((IEnumerable<BussinessCupApi.Models.City>)ViewBag.Cities).OrderBy(c => c.Order))
                        {
                            <tr class="border-b border-gray-600 hover:bg-gray-600 draggable-row" 
                                draggable="true" 
                                data-city-id="@item.CityID">
                                <td class="py-3 px-6 text-left whitespace-nowrap">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="py-3 px-6 text-center">
                                    <a asp-controller="City" asp-action="CreateCityAdmin" asp-route-id="@item.CityID"
                                       class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-3 rounded text-xs ml-2">
                                        Şehir Temsilcisi Ekle
                                    </a>
                                    <a asp-controller="City" asp-action="CreateAnnouncer" asp-route-id="@item.CityID"
                                       class="bg-yellow-500 hover:bg-yellow-600 text-gray-900 font-bold py-1 px-3 rounded text-xs ml-2">
                                        Editör Ekle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="bg-gray-800 rounded-lg p-6 mt-6">
                <p class="text-gray-400">Henüz şehir eklenmemiş.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/city-dragdrop.js"></script>
}