@model EditMatchViewModel

<div class="p-6">
    <h2 class="text-xl font-semibold text-white mb-4">Maç Düzenle</h2>
    <form asp-action="EditMatch" method="post">
        <input type="hidden" asp-for="MatchId" />
        
        <div class="space-y-4">
            <div>
                <label asp-for="HomeTeamId" class="block text-sm font-medium text-gray-300"></label>
                <select asp-for="HomeTeamId" 
                        asp-items="Model.Teams"
                        class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white"
                        onchange="validateTeams()">
                </select>
                <span asp-validation-for="HomeTeamId" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="AwayTeamId" class="block text-sm font-medium text-gray-300"></label>
                <select asp-for="AwayTeamId" 
                        asp-items="Model.Teams"
                        class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white"
                        onchange="validateTeams()">
                </select>
                <span asp-validation-for="AwayTeamId" class="text-red-500 text-sm"></span>
            </div>

                   <div>
                <label asp-for="MatchDate" class="block text-sm font-medium text-gray-300">Maç Tarihi</label>
                <input asp-for="MatchDate" type="datetime-local" 
                       class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-500 focus:ring-opacity-50">
                <span asp-validation-for="MatchDate" class="text-sm text-red-500"></span>
            </div>

            <div class="flex justify-end space-x-3">
                <button type="button" 
                        onclick="closedynamicDashboardModal()" 
                        class="px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700">
                    İptal
                </button>
                <button type="submit" 
                        id="editMatchSubmitBtn"
                        class="px-4 py-2 bg-yellow-600 text-white rounded-md hover:bg-yellow-700">
                    Kaydet
                </button>
            </div>
        </div>
    </form>
</div>
