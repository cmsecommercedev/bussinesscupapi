@model TeamViewModel
@{
    ViewData["Title"] = "Takım Düzenle";
    Layout = "_CityAdminLayout";
}

<div class="min-h-screen bg-gray-900 py-6">
    <div class="max-w-3xl mx-auto sm:px-6 lg:px-8">
        <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden">
            <div class="p-6">
                <div class="flex justify-between items-center mb-6">
                     <h2 class="text-xl font-semibold text-yellow-500">Takım Düzenle: @Model.Name</h2>
                     <a href="@Url.Action("Teams")" class="text-gray-400 hover:text-white">
                         <i class="fas fa-arrow-left"></i> Geri
                     </a>
                 </div>


                <form asp-action="EditTeam" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="TeamID" />
                    <input type="hidden" asp-for="ExistingLogoUrl" /> @* Postback durumunda kaybolmaması için *@

                    <div class="space-y-4">
                        <div>
                            <label asp-for="Name" class="block text-sm font-medium text-gray-300">Takım Adı</label>
                            <input asp-for="Name" class="mt-1 block w-full bg-gray-700 border-gray-600 text-white rounded-md shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-500 focus:ring-opacity-50" />
                            <span asp-validation-for="Name" class="text-sm text-red-500"></span>
                        </div>
<div>
    <label asp-for="CityID" class="block text-sm font-medium text-gray-300">Şehir</label>
    <select asp-for="CityID" asp-items="Model.AvailableCities" class="mt-1 block w-full bg-gray-700 border-gray-600 text-white rounded-md shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-500 focus:ring-opacity-50"></select>
    <span asp-validation-for="CityID" class="text-sm text-red-500"></span>
</div>

                        <div>
                            <label asp-for="Stadium" class="block text-sm font-medium text-gray-300">Stadyum</label>
                            <input asp-for="Stadium" class="mt-1 block w-full bg-gray-700 border-gray-600 text-white rounded-md shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-500 focus:ring-opacity-50" />
                            <span asp-validation-for="Stadium" class="text-sm text-red-500"></span>
                        </div>

                        <div>
                            <label asp-for="Manager" class="block text-sm font-medium text-gray-300">Teknik Direktör</label>
                            <input asp-for="Manager" class="mt-1 block w-full bg-gray-700 border-gray-600 text-white rounded-md shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-500 focus:ring-opacity-50" />
                            <span asp-validation-for="Manager" class="text-sm text-red-500"></span>
                        </div>
                        <div>
                            <label asp-for="TeamPassword" class="block text-sm font-medium text-gray-300">Takım Şifresi</label>
                            <input asp-for="TeamPassword" class="mt-1 block w-full bg-gray-700 border-gray-600 text-white rounded-md shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-500 focus:ring-opacity-50" />
                        </div>
                        <div>
                             <label class="block text-sm font-medium text-gray-300">Mevcut Logo</label>
                             @if (!string.IsNullOrEmpty(Model.ExistingLogoUrl))
                             {
                                 <div class="mt-2">
                                <img src="@Model.ExistingLogoUrl" alt="Mevcut Logo" ... />                                 </div>
                             }
                             else
                             {
                                 <p class="text-gray-400 text-sm mt-1">Mevcut logo yok.</p>
                             }
                         </div>

                        <div>
                             <label asp-for="Logo" class="block text-sm font-medium text-gray-300 mt-3">Yeni Logo Yükle (İsteğe Bağlı)</label>
                            <input type="file" asp-for="Logo" class="mt-1 block w-full text-sm text-gray-300
                                   file:mr-4 file:py-2 file:px-4
                                   file:rounded-md file:border-0
                                   file:text-sm file:font-medium
                                   file:bg-gray-700 file:text-gray-300
                                   hover:file:bg-gray-600" accept="image/*" />
                            <span asp-validation-for="Logo" class="text-sm text-red-500"></span>
                        </div>

                        <div class="flex justify-end space-x-3 pt-6">
                            <a href="@Url.Action("Teams")" class="px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-500 transition-colors">
                                İptal
                            </a>
                            <button type="submit" class="px-4 py-2 bg-yellow-600 text-white rounded-md hover:bg-yellow-700 transition-colors">
                                <i class="fas fa-save mr-2"></i>Kaydet
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 