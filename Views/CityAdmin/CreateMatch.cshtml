@model MatchViewModel
@{
    ViewData["Title"] = "Yeni Maç";
    Layout = "_PopupLayout";
} 

<div class="p-6 bg-gray-800 rounded-lg shadow-xl w-full max-w-3xl mx-auto">
    <div class="border-b border-gray-700 pb-4 mb-6">
        <h2 class="text-2xl font-semibold text-yellow-500">Yeni Maç Ekle</h2>
        <p class="text-gray-400 mt-1">Lige yeni bir maç ekleyebilirsiniz.</p>
    </div>

    <form asp-action="CreateMatch" method="post" id="createMatchForm">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
        <input type="hidden" asp-for="LeagueID" />
        <input type="hidden" asp-for="WeekID" />
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
             
            <div>
                <label asp-for="HomeTeamID" class="block text-sm font-medium text-gray-300">Ev Sahibi Takım</label>
                <select id="homeTeamSelect" asp-for="HomeTeamID" asp-items="@Model.Teams"
                        onchange="teamChanged(this, 'home')"
                        class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-500 focus:ring-opacity-50">
                    <option value="">Ev Sahibi Takım Seçin</option>
                </select>
                <span asp-validation-for="HomeTeamID" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label asp-for="AwayTeamID" class="block text-sm font-medium text-gray-300">Deplasman Takımı</label>
                <select id="awayTeamSelect" asp-for="AwayTeamID" asp-items="@Model.Teams"
                        onchange="teamChanged(this, 'away')"
                        class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-500 focus:ring-opacity-50">
                    <option value="">Deplasman Takımı Seçin</option>
                </select>
                <span asp-validation-for="AwayTeamID" class="text-sm text-red-500"></span>
                <span id="teamError" class="text-sm text-red-500 hidden">Ev sahibi ve deplasman takımı aynı olamaz!</span>
            </div>

            <div>
                <label asp-for="GroupID" class="block text-sm font-medium text-gray-300">Grup</label>
                <select asp-for="GroupID" asp-items="@Model.Groups"
                        class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-500 focus:ring-opacity-50">
                    <option value="">Grup Seçin (Opsiyonel)</option>
                </select>
                <span asp-validation-for="GroupID" class="text-sm text-red-500"></span>
            </div>

            <div>
                <label asp-for="MatchDate" class="block text-sm font-medium text-gray-300">Maç Tarihi</label>
                <input asp-for="MatchDate" type="datetime-local" 
                       class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white shadow-sm focus:border-yellow-500 focus:ring focus:ring-yellow-500 focus:ring-opacity-50">
                <span asp-validation-for="MatchDate" class="text-sm text-red-500"></span>
            </div>

            <div class="md:col-span-2 flex justify-end space-x-3 pt-6 border-t border-gray-700">
                <button type="button" onclick="closedynamicDashboardModal()" class="px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-500 transition-colors">
                    İptal
                </button>
                <button type="submit" class="px-4 py-2 bg-yellow-600 text-white rounded-md hover:bg-yellow-500 transition-colors" id="creatematchSaveButton"> 
                    Kaydet
                </button>
            </div>
        </div>
    </form>
</div>

  