@model List<BussinessCupApi.Models.Story>
@{
	ViewData["Title"] = "Stories";
	Layout = "_AdminLayout";
}

<div class="max-w-6xl mx-auto p-6">
	<h2 class="text-2xl font-bold text-gray-200 mb-6">Stories</h2>

	@if (TempData["SuccessMessage"] != null)
	{
		<div class="mb-4 p-3 rounded-lg text-sm bg-green-600 text-white">@TempData["SuccessMessage"]</div>
	}

	<!-- Create form -->
	<div class="mb-6 bg-gray-800 rounded-lg p-4">
		<h3 class="text-lg font-semibold text-gray-100 mb-3">Yeni Story</h3>
		<form asp-action="Create" method="post" enctype="multipart/form-data" class="space-y-4">
			@Html.AntiForgeryToken()
			<div>
				<label class="block text-gray-300 mb-1">Başlık</label>
				<input name="title" required class="w-full px-3 py-2 bg-gray-900 border border-gray-600 rounded-lg text-gray-200 focus:outline-none focus:border-yellow-500" />
			</div>
			<div>
				<label class="block text-gray-300 mb-1">Medya Dosyaları (birden fazla, resim veya mp4)</label>
				<input name="files" type="file" accept="image/*,video/mp4" multiple class="w-full px-3 py-2 bg-gray-900 border border-gray-600 rounded-lg text-gray-200 focus:outline-none focus:border-yellow-500" />
			</div>
			<div>
				<label class="inline-flex items-center gap-2 text-gray-300">
					<input type="checkbox" name="published" value="true" class="h-4 w-4 text-yellow-500 bg-gray-900 border-gray-600 rounded focus:ring-yellow-500" checked />
					<span>Yayınla</span>
				</label>
			</div>
			<div class="flex justify-end">
				<button type="submit" class="px-4 py-2 bg-yellow-500 hover:bg-yellow-400 text-gray-900 font-semibold rounded-lg">Kaydet</button>
			</div>
		</form>
	</div>

	<div class="space-y-4">
		@foreach (var s in Model)
		{
			<div class="bg-gray-800 rounded-lg p-4">
				<div class="flex items-center justify-between">
					<div>
						<div class="text-lg font-semibold text-gray-100">@s.Title</div>
						<div class="text-xs text-gray-400">@s.UpdatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm") • @(s.Published ? "Published" : "Draft")</div>
					</div>
					<form asp-action="Delete" method="post" onsubmit="return confirm('Silinsin mi?')">
						@Html.AntiForgeryToken()
						<input type="hidden" name="id" value="@s.Id" />
						<button type="submit" class="px-3 py-1 bg-red-600 hover:bg-red-500 text-white rounded-lg">Sil</button>
					</form>
				</div>

				@if ((s.Contents?.Count ?? 0) > 0)
				{
					<div class="mt-3 grid grid-cols-2 md:grid-cols-4 gap-3">
						@foreach (var c in s.Contents.OrderBy(c => c.DisplayOrder))
						{
							@if (!string.IsNullOrWhiteSpace(c.ContentType) && c.ContentType.StartsWith("video"))
							{
								<video class="w-full h-40 object-cover rounded" src="@c.MediaUrl" controls muted></video>
							}
							else
							{
								<img class="w-full h-40 object-cover rounded" src="@c.MediaUrl" alt="story media" />
							}
						}
					</div>
				}

				<!-- Append files form -->
				<div class="mt-4 border-t border-gray-700 pt-4">
					<form asp-action="AddFiles" method="post" enctype="multipart/form-data" class="flex items-center gap-3">
						@Html.AntiForgeryToken()
						<input type="hidden" name="id" value="@s.Id" />
						<input name="files" type="file" accept="image/*,video/mp4" multiple class="flex-1 px-3 py-2 bg-gray-900 border border-gray-600 rounded-lg text-gray-200 focus:outline-none focus:border-yellow-500" />
						<button type="submit" class="px-3 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded-lg">Dosya Ekle</button>
					</form>
				</div>
			</div>
		}
	</div>
</div>