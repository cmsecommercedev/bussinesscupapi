@model MatchNewsIndexViewModel

@if (Model.MatchNewsList != null && Model.MatchNewsList.Any())
{
    <div class="grid gap-4">
        @foreach (var newsItem in Model.MatchNewsList)
        {
            var matchNews = newsItem.MatchNews;
            var content = newsItem.Content;
            
            <div class="bg-gray-700 rounded-lg p-4">
                <div class="flex flex-col lg:flex-row gap-4">
                    <!-- Fotoğraf -->
                    <div class="lg:w-32 lg:h-24 w-full h-32 flex-shrink-0">
                        @if (!string.IsNullOrEmpty(matchNews.MatchNewsMainPhoto))
                        {
                            <img src="@matchNews.MatchNewsMainPhoto" alt="Haber Fotoğrafı" class="w-full h-full object-cover rounded-md">
                        }
                        else
                        {
                            <div class="w-full h-full bg-gray-600 rounded-md flex items-center justify-center">
                                <i class="fas fa-image text-gray-400 text-2xl"></i>
                            </div>
                        }
                    </div>

                    <!-- İçerik -->
                    <div class="flex-1">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                <h3 class="text-lg font-semibold text-white mb-1">
                                    @(content?.Title ?? "Başlık bulunamadı")
                                    @if (matchNews.IsMainNews)
                                    {
                                        <span class="ml-2 inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-600 text-white">
                                            <i class="fas fa-star mr-1"></i>Ana Haber
                                        </span>
                                    }
                                </h3>
                                @if (!string.IsNullOrEmpty(content?.Subtitle))
                                {
                                    <p class="text-gray-300 text-sm mb-2">@content.Subtitle</p>
                                }
                                <div class="flex items-center space-x-4 text-xs text-gray-400">
                                    <span><i class="fas fa-calendar mr-1"></i>@matchNews.CreatedDate.ToString("dd.MM.yyyy HH:mm")</span>
                                    <span class="flex items-center">
                                        <i class="fas fa-eye mr-1"></i>
                                        @if (matchNews.Published)
                                        {
                                            <span class="text-green-400">Yayında</span>
                                        }
                                        else
                                        {
                                            <span class="text-red-400">Yayında Değil</span>
                                        }
                                    </span>
                                </div>
                            </div>

                            <!-- İşlem Butonları -->
                            <div class="flex items-center space-x-2 ml-4">
                                <a href="@Url.Action("Edit", new { id = matchNews.Id })" 
                                   class="bg-blue-600 text-white px-3 py-1 rounded-md text-xs hover:bg-blue-700 transition-colors">
                                    <i class="fas fa-edit mr-1"></i>Düzenle
                                </a>
                                <button onclick="togglePublishStatus(@matchNews.Id, @(matchNews.Published ? "false" : "true"))"
                                        class="@(matchNews.Published ? "bg-orange-600 hover:bg-orange-700" : "bg-green-600 hover:bg-green-700") text-white px-3 py-1 rounded-md text-xs transition-colors">
                                    <i class="fas @(matchNews.Published ? "fa-eye-slash" : "fa-eye") mr-1"></i>
                                    @(matchNews.Published ? "Gizle" : "Yayınla")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Ek Fotoğraflar -->
                @if (matchNews.Photos != null && matchNews.Photos.Any())
                {
                    <div class="mt-3 pt-3 border-t border-gray-600">
                        <div class="flex space-x-2 overflow-x-auto">
                            @foreach (var photo in matchNews.Photos.Take(5))
                            {
                                <img src="@photo.PhotoUrl" alt="Ek Fotoğraf" class="w-16 h-16 object-cover rounded-md flex-shrink-0">
                            }
                            @if (matchNews.Photos.Count() > 5)
                            {
                                <div class="w-16 h-16 bg-gray-600 rounded-md flex items-center justify-center flex-shrink-0">
                                    <span class="text-xs text-gray-300">+@(matchNews.Photos.Count() - 5)</span>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-8">
        <i class="fas fa-newspaper text-4xl text-gray-500 mb-4"></i>
        <p class="text-gray-400">Henüz haber bulunmamaktadır.</p>
    </div>
} 