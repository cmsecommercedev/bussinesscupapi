@model TeamDetailsViewModel
@{
    ViewData["Title"] = "Takım Kadrosu";
    Layout = "_CaptainLayout";
}
    
<div class="container mx-auto px-4 py-8">
     @if (TempData["Success"] != null)
        {
            <div class="mb-4 p-4 bg-green-600 text-white rounded-lg">
                @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="mb-4 p-4 bg-red-600 text-white rounded-lg">
                @TempData["Error"]
            </div>
        }
    <div class="bg-gray-800 rounded-lg shadow-lg p-6">
        <!-- Üst Başlık ve Butonlar -->
        <div class="flex justify-between items-center mb-6">
            <div>
                <h1 class="text-2xl font-bold text-yellow-500">@Model.Name</h1>
                <div class="text-gray-400 mt-1">
                    <span class="mr-4"><i class="fas fa-map-marker-alt mr-1"></i>@Model.City</span>
                    <span class="mr-4"><i class="fas fa-stadium mr-1"></i>@Model.Stadium</span>
                    <span><i class="fas fa-user-tie mr-1"></i>@Model.Manager</span>
                </div>
            </div>
            <div class="flex space-x-2">
                <a href="@Url.Action("Dashboard")" class="bg-gray-700 text-white px-4 py-2 rounded hover:bg-gray-600 transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>Geri Dön
                </a>
                <a href="@Url.Action("EditTeam", new {  })" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors">
                    <i class="fas fa-edit mr-2"></i>Takımı Düzenle
                </a>
            </div>
        </div>

        <!-- Oyuncular Listesi -->
        <div class="mt-6">
            <h2 class="text-xl font-semibold text-white mb-4">Oyuncular (@Model.Players.Count)</h2>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-700">
                    <thead>
                        <tr class="bg-gray-700">
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Fotoğraf</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Forma No</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Ad Soyad</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Mevki</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Oyuncu Tipi</th>
                            <th class="px-6 py-3 text-right text-xs font-medium text-gray-300 uppercase tracking-wider">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody class="bg-gray-800 divide-y divide-gray-700">
                        @foreach (var player in Model.Players)
                        {
                            <tr class="hover:bg-gray-700 transition-colors">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex-shrink-0 h-10 w-10">
                                        @if (!string.IsNullOrEmpty(player.Icon))
                                        {
                                            <img class="h-10 w-10 rounded-full object-cover"
                                                 src="@player.Icon"
                                                 alt="@player.FullName" />
                                        }
                                        else
                                        {
                                            <img class="h-10 w-10 rounded-full object-cover"
                                                 src="@player.DefaultIcon"
                                                 alt="@player.FullName" />
                                        }
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-gray-700 text-white">
                                        @player.Number
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-white">@player.FullName</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">@player.Position</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">@player.PlayerType</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300 text-right">
                                    <div class="flex justify-end space-x-4">
                                        <!-- Düzenle -->
                                        <a href="@Url.Action("EditPlayer", new { playerId = player.PlayerID })"
                                           class="text-blue-400 hover:text-blue-300 transition-colors" title="Düzenle">
                                            <i class="fas fa-edit"></i>
                                        </a>


                                      
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Players.Any())
            {
                <div class="text-center py-8">
                    <p class="text-gray-400">Bu takımda henüz oyuncu bulunmuyor.</p>
                    <a href="@Url.Action("CreatePlayer", new { teamId = Model.TeamID })"
                       class="inline-block mt-4 bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition-colors">
                        <i class="fas fa-user-plus mr-2"></i>İlk Oyuncuyu Ekle
                    </a>
                </div>
            }
        </div>
    </div>
</div>
@if (TempData["DeleteError"] != null)
{
    <script>
        alert("@TempData["DeleteError"]");
    </script>
}